# Relive App Environment Configuration
# Copy this file to .env.local and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_WHISPER_MODEL=whisper-1

# Encryption Configuration
ENCRYPTION_MASTER_KEY=auto_generated_on_first_run
ENCRYPTION_ALGORITHM=AES-256-GCM

# Notification Configuration
NOTIFICATION_ENABLED=true
QUIET_HOURS_START=22:00
QUIET_HOURS_END=08:00

# Audio Recording Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BITS_PER_SAMPLE=16

# Search Configuration
SEARCH_INDEX_UPDATE_INTERVAL=300000
SEARCH_MAX_RESULTS=50

# Relationship Health Configuration
HEALTH_SCORE_UPDATE_INTERVAL=86400000
HEALTH_TREND_PERIOD_DAYS=30

# Commitment Tracking Configuration
COMMITMENT_REMINDER_DAYS_BEFORE=1
FOLLOWUP_REMINDER_DAYS_AFTER=3
RELATIONSHIP_CHECK_DAYS_SINCE=14

# Development Settings
DEBUG_MODE=true
MOCK_SERVICES_ENABLED=true
LOG_LEVEL=debug

# Storage Configuration
MAX_AUDIO_FILES=1000
CLEANUP_OLDER_THAN_DAYS=90
AUTO_CLEANUP_ENABLED=true